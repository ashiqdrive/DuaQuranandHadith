<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settngs_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.salsabeelapp.duaquranandhadith.SettngsMainPage">


    <TextView
        android:id="@+id/tvWhatTextToShow"
        android:text="To Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" />

    <RadioGroup
        android:id="@+id/radioGroupToShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWhatTextToShow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rbBothArabicAndTamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Both Arabic and Tamil"
            android:onClick="changeDuaView"/>

        <RadioButton
            android:id="@+id/rbOnlyArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Arabic"
            android:onClick="changeDuaView"/>

        <RadioButton
            android:id="@+id/rbOnlyTamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only Tamil"
            android:onClick="changeDuaView"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvTamilSizeCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupToShow"
        android:text="Tamil Font Size"
        android:layout_marginTop="5dp" />

    <RadioGroup
        android:id="@+id/radioGroupTamilFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTamilSizeCaption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rbTSize20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:onClick="changeTamilFontSizeRadioGroup"/>
        <RadioButton
            android:id="@+id/rbTSize22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22"
            android:onClick="changeTamilFontSizeRadioGroup"/>
        <RadioButton
            android:id="@+id/rbTSize24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24"
            android:onClick="changeTamilFontSizeRadioGroup"/>
        <RadioButton
            android:id="@+id/rbTSize26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="26"
            android:onClick="changeTamilFontSizeRadioGroup"/>
    </RadioGroup>




</RelativeLayout>
